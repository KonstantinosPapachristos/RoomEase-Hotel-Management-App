<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" fillWidth="false" spacing="20" style="-fx-background-color: #2b4b2e;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.roomease.Controller">

    <!-- App Name -->
    <Label prefHeight="9.0" prefWidth="165.0" style="-fx-font-size: 36px; -fx-text-fill: #1f3b1d;" text="RoomEase" textFill="WHITE">
      <font>
         <Font name="Helvetica Bold Oblique" size="13.0" />
      </font></Label>

    <!-- Username Field -->
    <TextField fx:id="usernameField" maxWidth="300" promptText="Username" style="-fx-font-family: Helvetica;" />

    <!-- Password Field -->
    <PasswordField fx:id="passwordField" maxWidth="300" promptText="Password" style="-fx-font-family: Helvetica;" />

    <!-- Login Button -->
    <Button fx:id="loginButton" maxWidth="300" onAction="#handleLoginButtonAction" style="-fx-background-color: #1f3b1d; -fx-text-fill: white; -fx-font-family: Helvetica;" text="Login" />

    <!-- Exit Button -->
    <Button fx:id="exitButton" maxWidth="100" onAction="#handleExitButtonAction" style="-fx-background-color: #8B0000; -fx-text-fill: white; -fx-font-family: Helvetica;" text="Exit" />

    <!-- Message Label (for login messages) -->
    <Label fx:id="loginMessage" style="-fx-text-fill: white; -fx-font-family: Helvetica;" />

</VBox>
